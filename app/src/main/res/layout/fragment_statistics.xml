<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    android:background="#33CCFF"
    
    tools:context=".StatusActivity$StatisticsFragment" >

    <TextView
        android:id="@+id/tv_totalTables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        
        android:text="@string/total_tables"
        android:textColor="#0000CC"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_totalTables_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_totalTables"
        android:layout_toEndOf="@id/tv_totalTables"

        android:text="@string/temp_value_zero"
        android:textColor="#0000CC"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_vacantTables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_totalTables"
        android:layout_marginTop="20dp"

        android:text="@string/vacant_tables"
        android:textColor="#0000CC"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_vacantTables_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/tv_vacantTables"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_vacantTables"
        android:layout_toEndOf="@id/tv_vacantTables"

        android:text="@string/temp_value_zero"
        android:textColor="#0000CC"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_averageWaitingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_vacantTables"
        android:layout_marginTop="20dp"

        android:text="@string/avg_waiting_time"
        android:textColor="#0000CC"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_averageWaitingTime_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/tv_averageWaitingTime"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_averageWaitingTime"
        android:layout_toEndOf="@id/tv_averageWaitingTime"

        android:text="@string/temp_value_zero"
        android:textColor="#0000CC"
        android:textSize="28sp"
        android:textStyle="bold" />

</RelativeLayout>
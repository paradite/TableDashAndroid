<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33CCFF"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:saveEnabled="true" >

        <TextView
            android:id="@+id/tv_main_checkIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:text="@string/tap_card"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3300CC" />

        <TextView
            android:id="@+id/tv_main_checkStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:layout_marginBottom="2dp"

            android:text="@string/check_status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3300CC"

            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_title_check_out"
            android:id="@+id/check_out_button"
            android:layout_below="@+id/tv_main_checkIn"
            android:layout_centerHorizontal="true"
            android:onClick="onClick"
            android:visibility="invisible"/>

    </RelativeLayout>
 </FrameLayout>
